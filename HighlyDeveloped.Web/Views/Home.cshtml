    <div class="row">
        <div class="col">
            @Html.Action("GetTweets", "Twitter", new { twitterHandle = "lejos89" })
            @Umbraco.RenderMacro("GetLatestTweets", new { twitterHandle = "lejos89" })
        </div>
    </div>
</div>